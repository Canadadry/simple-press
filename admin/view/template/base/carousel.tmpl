{{define "carousel"}}
    {{if .Uuid}}
        {{if .Pictures}}
            <div id="carouselPictures-{{.Uuid}}" class="carousel slide rounded bg-pale-navy w-100 h-100" data-bs-ride="false">
                <div class="carousel-indicators">
                {{range $idx,$image := .Pictures}}
                    <button type="button" data-bs-target="#carouselPictures-{{$.Uuid}}" data-bs-slide-to="{{$idx}}" {{if eq $idx 0}} class="active"{{end}} aria-current="true" aria-label="Slide{{$idx}}"></button>
                {{end}}
                </div>
                <div class="carousel-inner h-100">
                {{range $idx,$image := .Pictures}}
                    <div style="background: no-repeat center center / contain;" class="carousel-item {{if eq $idx 0}}active{{end}} bg-image bg-pale-navy h-100 rounded" data-bs-interval="999999" data-image-src="data:image/png;base64,{{ SafeUrl $image }}">
                    </div>
                {{end}}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselPictures-{{.Uuid}}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselPictures-{{.Uuid}}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        {{else}}
            <div class="image-wrapper bg-image bg-cover bg-pale-navy w-100 rounded" style="min-height: 140px;" data-image-src="{{ SafeUrl .Thumbnail }}"></div>
        {{end}}
    {{end}}
{{end}}