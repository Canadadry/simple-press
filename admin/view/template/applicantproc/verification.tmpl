{{define "body"}}
<section class="wrapper bg-light">
    <div class="container py-8 py-md-4">
        <div class="row">
            <div class="col">
                {{ if .Error }}
                    <div class="alert alert-danger alert-icon" role="alert" data-test="error">
                        <i class="uil uil-times-circle"></i>
                        {{ if eq .Error "errState" }}
                            {{ Trans "VERIFICATION.error.errState" }}
                        {{ else if eq .Error "errUnknown" }}
                            {{ Trans "VERIFICATION.error.errUnknown" }}
                        {{ else }}
                            {{ .Error }}
                        {{ end }}
                    </div>
                {{ end }}
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <h1 class="display-1 mt-6 mb-3" data-test="page-title">
                    {{ Trans "VERIFICATION.Title1" }} <span class="text-primary">{{ Trans "VERIFICATION.Title2" }}</span>
                </h1>
                <p class="lead fs-21 lh-sm mb-0">
                    {{ Trans "VERIFICATION.Subtitle1" }}
                    <span class="text-primary">{{ Trans "VERIFICATION.Subtitle2" }}</span>
                    {{ Trans "VERIFICATION.Subtitle3" }}
                    <span class="text-primary">{{ Trans "VERIFICATION.Subtitle4" }}</span>
                </p>
                <p class="lead fs-21 lh-sm mb-2">
                    <span class="text-primary">{{ Trans "VERIFICATION.Subtitle5" }}</span>
                    {{ Trans "VERIFICATION.Subtitle6" }}
                </p>
            </div>
        </div>
        <div class="table-responsive col-9 m-auto">
        <table class="table table-borderless table-striped text-center mb-4 mt-4">
            <thead>
            <tr>
                <th></th>
                <th class="bg-soft-primary">
                    <div class="h4 mb-1">
                        <img class="h-4" src="/public/img/mitrust_logo.png" />
                        {{Trans "VERIFICATION.TitleCertify"}}
                    </div>
                </th>
                <th>
                    <div class="h4 mb-1">{{Trans "VERIFICATION.TitleNotCertify"}}</div>
                </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td class="option text-start">{{Trans "VERIFICATION.Line1.Title"}}</td>
                <td class="bg-soft-primary">{{Trans "VERIFICATION.Line1.Check1"}}</td>
                <td>{{Trans "VERIFICATION.Line1.Check2"}}</td>
            </tr>
            <tr>
                <td class="option text-start">{{Trans "VERIFICATION.Line2.Title"}}</td>
                <td class="bg-soft-primary">{{Trans "VERIFICATION.Line2.Check1"}}</td>
                <td>{{Trans "VERIFICATION.Line2.Check2"}}</td>
            </tr>
            <tr>
                <td class="option text-start">{{Trans "VERIFICATION.Line3.Title"}}</td>
                <td class="bg-soft-primary">{{Trans "VERIFICATION.Line3.Check1"}}</td>
                <td>{{Trans "VERIFICATION.Line3.Check2"}}</td>
            </tr>
            <tr>
                <td class="option text-start">{{Trans "VERIFICATION.Line4.Title"}}</td>
                <td class="bg-soft-primary">{{Trans "VERIFICATION.Line4.Check1"}}</td>
                <td>{{Trans "VERIFICATION.Line4.Check2"}}</td>
            </tr>
            </tbody>
            <tfoot>
            <tr>
                <th></th>
                <th class="bg-soft-primary">
                    <a href="/review/free"  data-test="method-free-button" class="btn btn-soft-primary rounded-pill m-4">
                        {{ Trans "VERIFICATION.ButtonChooseMitrust" }}
                    </a>
                    <div>
                        {{Trans "VERIFICATION.ButtonCertifyWithMitrust"}}
                        <img class="h-3" src="/public/img/vignette-mitrust-3.png" />
                    </div>
                </th>
                <th class="d-flex">
                    <a href="/review/info"  data-test="method-nocertification-button" class="btn btn-soft-primary rounded-pill m-4">{{ Trans "VERIFICATION.ButtonChoose" }}</a>
                </th>
            </tr>
            </tfoot>
        </table>
        </div>
        <div class="mt-4">
            <div class="row gx-lg-8 gx-xl-12 gy-6 mb-14 mb-md-19">
                <div class="col-lg-4">
                    <div class="d-flex flex-row">
                        <div>
                            <div class="icon btn btn-circle pe-none btn-primary me-4">
                                <i class="uil uil-lock-open-alt"></i>
                            </div>
                        </div>
                        <div>
                            <h4>{{ Trans "VERIFICATION.Explain1.Title" }}</h4>
                            <p class="mb-2">{{ Trans "VERIFICATION.Explain1.Desc" }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-flex flex-row">
                        <div>
                            <div class="icon btn btn-circle pe-none btn-primary me-4">
                                <i class="uil uil-rocket"></i>
                            </div>
                        </div>
                        <div>
                            <h4>{{ Trans "VERIFICATION.Explain2.Title" }}</h4>
                            <p class="mb-2">{{ Trans "VERIFICATION.Explain2.Desc" }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="d-flex flex-row">
                        <div>
                            <div class="icon btn btn-circle pe-none btn-primary me-4">
                                <i class="uil uil-briefcase-alt"></i>
                            </div>
                        </div>
                        <div>
                            <h4>{{ Trans "VERIFICATION.Explain3.Title" }}</h4>
                            <p class="mb-2">{{ Trans "VERIFICATION.Explain3.Desc" }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{{if .info}}
<div class="modal-backdrop fade show"></div>
<div class="modal fade show d-flex" id="modal" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-md">
    <div class="modal-content text-center">
      <div class="modal-body">
        <a class="btn-close" href="/review" aria-label="Close"></a>
        <div class="text-primary h4">{{Trans "VERIFICATION.Popup.Title"}}</div>
        <div class="d-flex text-start mb-4">
            <img src="/public/img/icons/lineal/hourglass.svg" class="svg-inject icon-svg icon-svg-sm text-primary flex-grow-0 me-4" alt="" />
            {{Trans "VERIFICATION.Popup.Line1"}}
        </div>
        <div class="d-flex text-start mb-4">
            <img src="/public/img/icons/lineal/upload.svg" class="flex-grow-0 svg-inject icon-svg icon-svg-sm text-primary me-4" alt="" />
            {{Trans "VERIFICATION.Popup.Line2"}}
        </div>
        <div class="d-flex text-start mb-4">
            <i class="uil uil-multiply fs-32 flex-grow-0 me-4"></i>
            {{Trans "VERIFICATION.Popup.Line3"}}
        </div>
        <a href="/review" class="btn btn-primary rounded-pill mb-4">Retour</a>
        <form action="/review" method="post" name="method-nocheck">
            <a href="/batch" data-test="method-nocheck-button">
                {{ Trans "VERIFICATION.DoNotCertify" }}
            </a>
        </form>
      </div>
    </div>
  </div>
</div>
{{end}}

{{end}}