{{define "body"}}
<section class="wrapper bg-light">
    <div class="container py-8 py-md-14">
        <div class="row">
            {{range $idx, $item := .Items}}
                <div class="col-12 mb-3">
                    {{if not $item.Active }}
                        <section class="wrapper">
                            <div class="card">
                                <div class="card-body px-4 py-2 d-flex justify-content-between">
                                    {{ if and $.Data.Logged $item.IsUsable }}
                                        <a href="{{ $item.Link }}" class="hover link-{{$item.Color}}" {{if $item.DataTest}}data-test="{{$item.DataTest}}"{{end}}>
                                            <h2 class="mb-0 text-{{$item.Color}}">
                                            <span>{{ Trans (print "SIDEBAR." $item.Name)}}</span>
                                                <i class="uil uil-pen"></i>
                                            </h2>
                                        </a>
                                        <a href="{{$item.Link}}" class="btn btn-circle btn-soft-{{$item.Color}} btn-sm flex-shrink-0" data-test='form-link-{{$idx}}'>
                                            <i class="uil uil-{{$item.Icon}}"></i>
                                        </a>
                                    {{ else }}
                                        <h2 class="mb-0 text-{{$item.Color}}">
                                            <span>{{ Trans (print "SIDEBAR." $item.Name)}}</span>
                                        </h2>
                                    {{ end }}
                                </div>
                            </div>
                        </section>
                    {{else}}
                        <section class="wrapper bg-light">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <section class="wrapper">
                                        <div class="card">
                                            <div class="card-body p-3 p-lg-10">
                                                <form name="intro" action="{{ if $.Logged }}/profile{{ else }}/estates/{{ $.EstateUuid }}{{ end }}/intro" method="post">
                                                    <div class="container my-5">
                                                        <div class="row flex-col align-items-center">
                                                            <div class="col text-center text-lg-start">
                                                                <h2>{{ Trans "FORM.INTRO.hello" }}<br/>{{ Trans "FORM.INTRO.explanation" }}</h2>
                                                                <div class="form-floating mb-4">
                                                                    <div class="row justify-content-start align-items-center gx-4">
                                                                        <div class="col p-3">
                                                                            {{ Trans "FORM.INTRO.numberOfPerson" }}<strong>*</strong>
                                                                        </div>
                                                                        <div class="col p-3">
                                                                            <input id="form_number_of_person" class="form-control" type="number" name="number_of_person" value="{{ $.NumberOfPerson.Value }}" required>
                                                                        </div>
                                                                    {{ if $.NumberOfPerson.ErrorMsg}}
                                                                        <div class="invalid-feedback d-block" data-test='number_of_person_err'>
                                                                            {{ $.NumberOfPerson.ErrorMsg }}
                                                                        </div>
                                                                    {{ end }}
                                                                    </div>
                                                                </div>
                                                                <div class="col-12 d-flex mt-4 flex-wrap">
                                                                    <button type="submit" class="btn btn-primary rounded-pill mb-3">{{ Trans "FORM.INTRO.validate"}}</button>
                                                                </div>
                                                            </div>
                                                            <div class="col">
                                                                <div class="shape bg-dot primary rellax w-17 h-19"></div>
                                                                <div class="shape rounded bg-soft-primary rellax d-md-block"></div>
                                                                <figure class="rounded"><img class="img-fluid" src="./public/img/illustrations/applicant_intro.png" alt="" /></figure>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </section>
                                </div>
                            </div>
                        </section>
                    {{end}}
                </div>
            {{end}}
        </div>
    </div>
</section>
{{end}}
