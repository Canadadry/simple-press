{{define "body"}}
<section class="wrapper bg-light">
    <div class="container py-8 py-md-14">
        <div class="row">
            <div class="col-12">
                {{ if .Errors }}
                    <div class="alert alert-danger alert-icon alert-dismissible fade show" role="alert" data-test="error">
                        <i class="uil uil-times-circle"></i>
                            {{Trans "schedule.badRequest_message"}}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {{ end }}
            </div>
            <section class="wrapper bg-light">
                <div>
                    <div class="row">
                        <div class="col-12 col-lg-6 mb-3">
                            <section class="wrapper">
                                <div class="card">
                                    <div class="card-body p-3 p-lg-10">
                                        <form name="schedule" method="post">
                                            <div class="row gx-4 text-center">
                                                <div class=" col-12 p-3" data-test="page-title">
                                                  {{ Trans "schedule.Title"}}:
                                                </div>
                                                <div class="col-2"></div>
                                                <div class="col-8">
                                                    {{range $idx, $item := .Schedules}}
                                                    <div class="row">
                                                        <button data-test="schedule-{{$idx}}" type="submit" name="schedule" value="{{$item.Uuid}}" class="btn btn-outline-ash btn-lg rounded-pill my-1">{{$item.Date}}</button>
                                                    </div>
                                                    {{end}}
                                                </div>
                                                <div class="col-2"></div>
                                        </form>
                                    </div>
                                </div>
                            </section>
                        </div>
                        <div class="col-12 col-lg-6">
                            <div class="card mb-3">
                                <div class="row g-0">
                                  <div class="col-md-4">
                                    <img src="{{ SafeUrl .Estate.Thumbnail }}" alt="estate thumbnail" class="img-fluid rounded-start" a>
                                  </div>
                                  <div class="col-md-8">
                                    <div class="card-body">
                                        <h4 class="card-title" data-test="estate-title">{{ if .Estate.Kind}}{{ Trans (print "FIRST_LOGIN.Kind." .Estate.Kind) }}{{ end }} {{ .Estate.Type }} {{ .Estate.City }}<br/></h4>
                                        <div class="mt-2 fs-16 text-uppercase text-muted">{{ Trans "FIRST_LOGIN.Desc" }} :</div>
                                        <span data-test="estate-rooms">{{ .Estate.NbRooms }} {{ Trans "FIRST_LOGIN.Rooms" }}</span><br/>
                                        <span data-test="estate-area">{{ .Estate.Area }} m<sup>2</sup></span><br/>
                                        <span data-test="estate-rent">{{ .Estate.RentAmount }} â‚¬ {{ Trans "FIRST_LOGIN.RentUnit" }}</span><br/>
                                        <p class="mt-2">{{ .Estate.Desc }}</p>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</section>
{{end}}
